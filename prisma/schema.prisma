generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String
  goal        String   @db.Text
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tasks       Task[]
  events      Event[]
}

model Task {
  id             String    @id @default(cuid())
  title          String
  description    String?   @db.Text
  status         String    @default("backlog") // backlog, in_progress, blocked, done
  priority       String    @default("medium")  // low, medium, high
  epic           String?
  effort         String?
  estimatedDays  Int?
  
  projectId      String
  project        Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  dependencies   String[]  // Array of task IDs
  assignedBy     String    @default("Planner Agent")
  
  startedAt      DateTime?
  completedAt    DateTime?
  dueDate        DateTime?
  lastUpdatedAt  DateTime  @default(now())
  
  agentComments  AgentComment[]
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  @@index([projectId])
  @@index([status])
}

model AgentComment {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  agent     String   // Planner, Risk, Motivation, Report
  message   String   @db.Text
  type      String   @default("info") // info, warning, blocker, motivation
  
  createdAt DateTime @default(now())
  
  @@index([taskId])
}

model Event {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  name      String   // task.created, task.updated, task.blocked, etc.
  payload   Json
  
  createdAt DateTime @default(now())
  
  @@index([projectId])
  @@index([name])
}